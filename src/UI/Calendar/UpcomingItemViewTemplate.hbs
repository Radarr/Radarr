<div class="event">
    <div class="date {{StatusLevel}}">
        <h1>{{Day airDateUtc}}</h1>
        <h4>{{Month airDateUtc}}</h4>
    </div>
    {{#with series}}
        <a href="{{route}}">
            <h4>{{title}}</h4>
        </a>
    {{/with}}
    <p>
        {{StartTime airDateUtc}} {{#unless_today airDateUtc}}{{ShortDate airDateUtc}}{{/unless_today}}
    </p>
    <p>
        <span class="episode-title x-episode-title">
            {{title}}
        </span>
        <span class="pull-right">
            {{seasonNumber}}x{{Pad2 episodeNumber}}
        </span>
    </p>
</div>
